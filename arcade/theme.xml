<theme>

    <formatVersion>3</formatVersion>
    <include>./../futura.xml</include>

    <view name="system, basic, detailed, video">
        <image name="logo">
            <path>./system.svg</path>
        </image>
    </view>
	
<!-- SYSTEM VIEW START //-->	
	<view name="system">
		<text name="system_description" extra="true">
			<text>An arcade game or coin-op is a coin-operated entertainment machine typically installed in public businesses such as restaurants, bars and amusement arcades. While exact dates are debated, the golden age of arcade video games is usually defined as a period beginning sometime in the late 1970s and ending sometime in the mid-1980s.</text>
		</text>	
<!-- screenshot left //-->		
		<image name="screenshot_left" extra="true">
			<path>./screenshot_left.png</path>			
		</image>
<!-- screenshot center //-->
		<image name="screenshot_center" extra="true">
			<path>./screenshot_center.png</path>
		</image>	
<!-- screenshot right //-->			
		<image name="screenshot_right" extra="true">
			<path>./screenshot_right.png</path>
		</image>
	</view>
	
<!-- BASIC VIEW START //-->	
	<view name="basic">
		<image name="logo">	
			<pos>0.5 0.095</pos>
			<maxSize>0.20 0.16</maxSize>	
		</image>
		<text name="system_name" extra="true">
			<text>Arcade</text>
		</text>		
		<text name="system_year" extra="true">
			<text>197x - 198x</text>
		</text>	
	</view>
	
<!-- DETAILED VIEW START //-->	
	<view name="detailed, video">
		<image name="logo">
			<pos>0.135 0.04</pos>
			<maxSize>0.20 0.16</maxSize>
		</image>		
		<text name="system_name_year" extra="true">
			<text>Arcade 197? - 198?</text>	
			<pos>0.58 0.045</pos>
		</text>				
	</view>		

</theme>