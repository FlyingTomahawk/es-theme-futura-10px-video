<theme>

    <formatVersion>3</formatVersion>
    <include>./../futura.xml</include>

    <view name="system, basic, detailed, video">
        <image name="logo">
            <path>./system.svg</path>
        </image>
    </view>
	
<!-- SYSTEM VIEW START //-->	
	<view name="system">
		<text name="system_description" extra="true">
			<text>The WonderSwan is a handheld game console released in Japan by Bandai. It was developed by Gunpei Yokoi's company Koto Laboratory and Bandai. Released in 1999.</text>
		</text>
<!-- screenshot left //-->		
		<image name="screenshot_left" extra="true">
			<path>./screenshot_left.png</path>			
		</image>
<!-- screenshot center //-->
		<image name="screenshot_center" extra="true">
			<path>./screenshot_center.png</path>
		</image>	
<!-- screenshot right //-->			
		<image name="screenshot_right" extra="true">
			<path>./screenshot_right.png</path>
		</image>
	</view>
	
<!-- BASIC VIEW START //-->	
	<view name="basic">
		<text name="system_name" extra="true">
			<text>Wonderswan</text>
			<pos>0.03 0.08</pos>				
		</text>		
		<text name="system_year" extra="true">
			<text>1999 - 2003</text>
			<pos>0.745 0.08</pos>
		</text>	
	</view>
	
<!-- DETAILED VIEW START //-->	
	<view name="detailed, video">
		<image name="logo">
			<pos>0.10 0.06</pos>
		</image>		
		<text name="system_name_year" extra="true">
			<text>Wonderswan 1999 - 2003</text>		
			<pos>0.57 0.05</pos>	
			<fontSize>0.04</fontSize>			
		</text>				
	</view>		

</theme>