<theme>

    <formatVersion>3</formatVersion>
    <include>./../futura.xml</include>

    <view name="system, basic, detailed, video">
        <image name="logo">
            <path>./system.svg</path>
        </image>
    </view>
	
<!-- SYSTEM VIEW START //-->	
	<view name="system">
		<text name="system_description" extra="true">
			<text>MAME (Multiple Arcade Machine Emulator) is a free and open source emulator designed to recreate the hardware of arcade game systems in software on modern personal computers and other platforms. The intention is to preserve gaming history by preventing vintage games from being lost or forgotten.</text>
		</text>	
<!-- screenshot left //-->		
		<image name="screenshot_left" extra="true">
			<path>./screenshot_left.png</path>			
		</image>
<!-- screenshot center //-->
		<image name="screenshot_center" extra="true">
			<path>./screenshot_center.png</path>
		</image>	
<!-- screenshot right //-->			
		<image name="screenshot_right" extra="true">
			<path>./screenshot_right.png</path>
		</image>
	</view>
	
<!-- BASIC VIEW START //-->	
	<view name="basic">
		<text name="system_name" extra="true">
			<text>MAME</text>
			<pos>0.09 0.08</pos>					
		</text>		
		<text name="system_year" extra="true">
			<text>1997 - present</text>	
			<fontSize>0.04</fontSize>	
			<pos>0.75 0.08</pos>			
		</text>	
	</view>
	
<!-- DETAILED VIEW START //-->	
	<view name="detailed, video">
		<text name="system_name_year" extra="true">
			<text>MAME 1997 - present</text>	
			<pos>0.555 0.045</pos>			
		</text>				
	</view>		

</theme>