<theme>

    <formatVersion>3</formatVersion>
    <include>./../futura.xml</include>

    <view name="system, basic, detailed, video">
        <image name="logo">
            <path>./system.svg</path>
        </image>
    </view>
	
<!-- SYSTEM VIEW START //-->	
	<view name="system">
		<text name="system_description" extra="true">
			<text>The PC Engine CD-ROM² The CD-ROM² System is an add-on console that is attached to a standard PC Engine, which can play CD-based format games as well as audio CDs. This made the PC Engine the first device ever to use CD-ROM as a storage medium for video games.</text>
		</text>	
<!-- screenshot left //-->		
		<image name="screenshot_left" extra="true">
			<path>./screenshot_left.png</path>			
		</image>
<!-- screenshot center //-->
		<image name="screenshot_center" extra="true">
			<path>./screenshot_center.png</path>
		</image>	
<!-- screenshot right //-->			
		<image name="screenshot_right" extra="true">
			<path>./screenshot_right.png</path>
		</image>
	</view>
	
<!-- BASIC VIEW START //-->	
	<view name="basic">
		<text name="system_name" extra="true">
			<text>PC Engine CD-ROM²</text>
			<pos>0.022 0.08</pos>	
			<fontSize>0.045</fontSize>
			<size>0.25 0</size>			
			<alignment>center</alignment>	
			<lineSpacing>1</lineSpacing>			
		</text>		
		<text name="system_year" extra="true">
			<text>1988 - 1999</text>
		</text>	
	</view>
	
<!-- DETAILED VIEW START //-->	
	<view name="detailed, video">
		<image name="logo">
			<pos>0.12 0.065</pos>
		</image>		
		<text name="system_name_year" extra="true">
			<text>PCE-CD 1988 - 1999</text>
			<pos>0.59 0.05</pos>			
		</text>
	</view>		

</theme>