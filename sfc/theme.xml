<theme>

    <formatVersion>3</formatVersion>
    <include>./../futura.xml</include>

    <view name="system, basic, detailed, video">
        <image name="logo">
            <path>./system.svg</path>
        </image>
    </view>
	
<!-- SYSTEM VIEW START //-->	
	<view name="system">
		<text name="system_description" extra="true">
			<text>The Super Family Computer (also known as the Super Famicom or SFC) is a 16-bit video game console that was released by Nintendo on November 21, 1990. The Super Famicom is Nintendo's second home console, following the Family Computer.</text>
		</text>
<!-- screenshot left //-->		
		<image name="screenshot_left" extra="true">
			<path>./screenshot_left.png</path>			
		</image>
<!-- screenshot center //-->
		<image name="screenshot_center" extra="true">
			<path>./screenshot_center.png</path>
		</image>	
<!-- screenshot right //-->			
		<image name="screenshot_right" extra="true">
			<path>./screenshot_right.png</path>
		</image>
	</view>
	
<!-- BASIC VIEW START //-->	
	<view name="basic">
		<image name="logo">	
			<pos>0.5 0.1</pos>
			<maxSize>0.30 0.24</maxSize>	
		</image>
		<text name="system_name" extra="true">
			<text>Super Famicom</text>
			<pos>0.020 0.07</pos>	
			<size>0.25 0</size>			
			<alignment>center</alignment>	
			<lineSpacing>1</lineSpacing>			
		</text>				
		<text name="system_year" extra="true">
			<text>1990 - 2003</text>
			<pos>0.75 0.08</pos>
		</text>	
	</view>	
	
<!-- DETAILED VIEW START //-->	
	<view name="detailed, video">
		<image name="logo">
			<pos>0.11 0.05</pos>
			<maxSize>0.30 0.24</maxSize>
		</image>	
		<text name="system_name_year" extra="true">
			<text>SFC 1990 - 2003</text>			
		</text>				
	</view>	
	
</theme>