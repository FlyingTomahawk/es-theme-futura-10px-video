<theme>

    <formatVersion>3</formatVersion>
    <include>./../futura.xml</include>

    <view name="system, basic, detailed, video">
        <image name="logo">
            <path>./system.svg</path>
        </image>
    </view>
	
<!-- SYSTEM VIEW START //-->	
	<view name="system">
		<text name="system_description" extra="true">
			<text>The PC Engine SuperGrafx, also shortened as the SuperGrafx or PC Engine SG, is a video game console by NEC Home Electronics, released exclusively in Japan. It is an upgraded version of the PC Engine, released two years prior.</text>
		</text>	
<!-- screenshot left //-->		
		<image name="screenshot_left" extra="true">
			<path>./screenshot_left.png</path>			
		</image>
<!-- screenshot center //-->
		<image name="screenshot_center" extra="true">
			<path>./screenshot_center.png</path>
		</image>	
<!-- screenshot right //-->			
		<image name="screenshot_right" extra="true">
			<path>./screenshot_right.png</path>
		</image>
	</view>
	
<!-- BASIC VIEW START //-->	
	<view name="basic">
		<image name="logo">	
			<pos>0.5 0.1</pos>
			<maxSize>0.16 0.12</maxSize>	
		</image>
		<text name="system_name" extra="true">
			<text>SuperGrafx</text>
			<pos>0.03 0.08</pos>
		</text>		
		<text name="system_year" extra="true">
			<text>1989 - 1990</text>
		</text>	
	</view>
	
<!-- DETAILED VIEW START //-->	
	<view name="detailed, video">
		<image name="logo">
			<pos>0.17 0.045</pos>
			<maxSize>0.16 0.12</maxSize>
		</image>		
		<text name="system_name_year" extra="true">
			<text>SuperGrafx 1989 - 1990</text>
			<pos>0.56 0.05</pos>
			<fontSize>0.045</fontSize>			
		</text>				
	</view>		

</theme>