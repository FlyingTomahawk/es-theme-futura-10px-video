<theme>

    <formatVersion>3</formatVersion>
    <include>./../futura.xml</include>

    <view name="system, basic, detailed, video">
        <image name="logo">
            <path>./system.svg</path>
        </image>
    </view>
	
<!-- SYSTEM VIEW START //-->	
	<view name="system">
		<text name="system_description" extra="true">
			<text>The Sega Master System is a third-generation home video game console that was manufactured by Sega. Succeeding the SG-1000, the Master System was released as a direct competitor to the Nintendo Entertainment System (NES) in the third generation of video game consoles.</text>
		</text>	
<!-- screenshot left //-->		
		<image name="screenshot_left" extra="true">
			<path>./screenshot_left.png</path>			
		</image>
<!-- screenshot center //-->
		<image name="screenshot_center" extra="true">
			<path>./screenshot_center.png</path>
		</image>	
<!-- screenshot right //-->			
		<image name="screenshot_right" extra="true">
			<path>./screenshot_right.png</path>
		</image>
	</view>
	
<!-- BASIC VIEW START //-->	
	<view name="basic">
		<image name="logo">
			<pos>0.5 0.095</pos>
			<maxSize>0.25 0.14</maxSize>
		</image>
		<text name="system_name" extra="true">
			<text>Sega Master System</text>
			<pos>0.022 0.08</pos>	
			<fontSize>0.045</fontSize>
			<size>0.25 0</size>			
			<alignment>center</alignment>	
			<lineSpacing>1</lineSpacing>	
		</text>		
		<text name="system_year" extra="true">
			<text>1985 - 1992</text>
		</text>	
	</view>
	
<!-- DETAILED VIEW START //-->	
	<view name="detailed, video">
		<image name="logo">
			<pos>0.13 0.028</pos>
			<maxSize>0.28 0.15</maxSize>
		</image>	
		<text name="system_name_year" extra="true">
			<text>SMS 1985 - 1992</text>	
		</text>				
	</view>		

</theme>