<theme>

    <formatVersion>3</formatVersion>
    <include>./../futura.xml</include>

    <view name="system, basic, detailed, video">
        <image name="logo">
            <path>./system.svg</path>
        </image>	
    </view>
	
<!-- SYSTEM VIEW START //-->
	<view name="system">
		<text name="system_description" extra="true">
			<text>The Game Boy is an 8-bit handheld video game device with interchangeable cartridges developed and manufactured by Nintendo, which was first released in Japan on April 21, 1989, in North America on July 31, 1989 and in Europe on September 28, 1990.</text>
		</text>
<!-- screenshot left //-->		
		<image name="screenshot_left" extra="true">
			<path>./screenshot_left.png</path>			
		</image>
<!-- screenshot center //-->
		<image name="screenshot_center" extra="true">
			<path>./screenshot_center.png</path>
		</image>	
<!-- screenshot right //-->			
		<image name="screenshot_right" extra="true">
			<path>./screenshot_right.png</path>
		</image>	
	</view>
	
<!-- BASIC VIEW START //-->	
	<view name="basic">
		<text name="system_name" extra="true">
			<text>Game Boy</text>
		</text>	
		<text name="system_year" extra="true">
			<text>1989 - 2003</text>
			<pos>0.75 0.08</pos>
		</text>		
	</view>
	
<!-- DETAILED VIEW START //-->	
	<view name="detailed, video">
		<image name="logo">
			<pos>0.10 0.06</pos>
		</image>			
		<text name="system_name_year" extra="true">
			<text>GB 1989 - 2003</text>			
		</text>				
	</view>		
	
</theme>