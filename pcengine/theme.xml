<theme>

    <formatVersion>3</formatVersion>
    <include>./../futura.xml</include>

    <view name="system, basic, detailed, video">
        <image name="logo">
            <path>./system.svg</path>
        </image>
    </view>
	
<!-- SYSTEM VIEW START //-->	
	<view name="system">
		<text name="system_description" extra="true">
			<text>The PC Engine, known in the US as the TurboGrafx-16 Entertainment SuperSystem, is a home video game console jointly developed by Hudson Soft and NEC Home Electronics.  It was the first console released in the 16-bit era, albeit still utilizing an 8-bit CPU.</text>
		</text>	
<!-- screenshot left //-->		
		<image name="screenshot_left" extra="true">
			<path>./screenshot_left.png</path>			
		</image>
<!-- screenshot center //-->
		<image name="screenshot_center" extra="true">
			<path>./screenshot_center.png</path>
		</image>	
<!-- screenshot right //-->			
		<image name="screenshot_right" extra="true">
			<path>./screenshot_right.png</path>
		</image>
	</view>
	
<!-- BASIC VIEW START //-->	
	<view name="basic">
		<image name="logo">
			<maxSize>0.25 0.14</maxSize>
		</image>		
		<text name="system_name" extra="true">
			<text>PC Engine</text>			
		</text>		
		<text name="system_year" extra="true">
			<text>1987 - 1994</text>
		</text>	
	</view>
	
<!-- DETAILED VIEW START //-->	
	<view name="detailed, video">
		<image name="logo">
			<pos>0.17 0.030</pos>
			<maxSize>0.25 0.145</maxSize>
		</image>		
		<text name="system_name_year" extra="true">
			<text>PCE 1987 - 1994</text>			
		</text>			
	</view>		

</theme>