        </image>		
		<image name="logo">
			<origin>0 0</origin>
			<pos>0.10 0.04</pos>
			<maxSize>0.28 0.15</maxSize>
		</image>	
		<text name="system_name_year" extra="true">
			<pos>0.61 0.05</pos>			
			<fontSize>0.05</fontSize>
			<alignment>center</alignment>
			<forceUppercase>1</forceUppercase>
		</text>				
		<textlist name="gamelist">
			<pos>0.15 0.25</pos>
			<size>0.36 0.61</size>
			<fontSize>0.03</fontSize>
		</textlist>	
		<text name="md_description">
			<pos>0.56 0.61</pos>
