<theme>
    <formatVersion>3</formatVersion>
<!-- BOF ALL 3 VIEWS //-->
    <view name="system, basic, detailed, video">
	<!-- regular background //-->	
		<image name="background" extra="true">
            <path>./_art/images/futura_bg.png</path>
            <pos>0 0</pos>
            <size>1 0</size>
			<color>b1b1ff</color>
        </image>			 
		<helpsystem name="help">
			<textColor>ffffff</textColor>
			<iconColor>ffffff</iconColor>
			<fontPath>./_art/fonts/Audiowide-Regular.ttf</fontPath>
			<fontSize>0.035</fontSize>
			<pos>0.030 0.935</pos>
		</helpsystem>
		<text name="system_description, md_description,	md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_developer, md_publisher, md_genre, md_players, md_playcount, md_lbl_lastplayed, md_lbl_playcount" extra="true">
			<fontPath>./_art/fonts/Audiowide-Regular.ttf</fontPath>
			<color>ffffff</color>			
		</text>
		<text name="system_name, system_year, system_name_year" extra="true">
			<fontPath>./_art/fonts/SubZER0.ttf</fontPath>
			<color>ffffff</color>				
		</text>		
		<textlist name="gamelist">
			<fontPath>./_art/fonts/Audiowide-Regular.ttf</fontPath>	
			<selectorColor>eeeeee77</selectorColor>
			<selectedColor>000000</selectedColor>
			<primaryColor>ffffff</primaryColor>
			<secondaryColor>ffffff</secondaryColor>
			<forceUppercase>1</forceUppercase>			
		</textlist>	
		<datetime name="md_releasedate, md_lastplayed">
			<fontPath>./_art/fonts/Audiowide-Regular.ttf</fontPath>
			<color>ffffff</color>
		</datetime>	
		
	</view>
<!-- EOF ALL 3 VIEWS //-->
	
<!-- BOF SYSTEM VIEW //-->
    <view name="system">	
	
		<image name="screenshot_left" extra="true">
			<pos>0.006 0.009</pos>
			<size>0.330 0</size>
		</image>			
		<image name="screenshot_center" extra="true">
			<pos>0.305 0.009</pos>
			<size>0.390 0</size>			
		</image>		
		<image name="screenshot_right" extra="true">
			<pos>0.663 0.009</pos>
			<size>0.330 0</size>		
		</image>				
		<image name="frame_system_top" extra="true">
			<path>./_art/images/f_system_top_10px.png</path>		
			<pos>0 0</pos>
			<size>1 0</size>
			<color>ffffff</color>
		</image>		
		<image name="frame_system_bottom" extra="true">
			<path>./_art/images/f_system_bottom_10px.png</path>
			<pos>0 0.687</pos>
			<size>1 0</size>
		</image>			
		<text name="system_description" extra="true">
			<pos>0.20 0.695</pos>
			<size>0.60 0.198</size>
			<color>ffffff</color>
			<fontSize>0.022</fontSize>
			<alignment>center</alignment>
			<forceUppercase>1</forceUppercase>
		</text>		
		
	</view>
<!-- EOF SYSTEM VIEW //-->	

<!-- BOF BASIC VIEW //-->
	<view name="basic">
	
		<image name="frame_basic" extra="true">
            <path>./_art/images/f_basic_10px.png</path>
            <pos>0 0</pos>
            <size>1 0</size>
        </image>	
		<image name="logo">
			<origin>0.5 0.5</origin>
			<pos>0.5 0.1</pos>
			<maxSize>0.25 0.16</maxSize>
		</image>		
		<text name="system_name" extra="true">
			<pos>0.055 0.08</pos>
			<fontSize>0.05</fontSize>
			<alignment>center</alignment>
			<forceUppercase>1</forceUppercase>
		</text>	
		<text name="system_year" extra="true">
			<pos>0.76 0.08</pos>
			<fontSize>0.05</fontSize>
			<alignment>center</alignment>
			<forceUppercase>1</forceUppercase>
		</text>			
		<textlist name="gamelist">
			<pos>0.15 0.24</pos>
			<size>0.70 0.64</size>
			<fontSize>0.035</fontSize>
		</textlist>	
		
	</view>
<!-- EOF BASIC VIEW //-->	
<!-- BOF DETAILED & VIDEO VIEW //-->
<view name="detailed, video">

		<image name="frame_detailed" extra="true">
            <path>./_art/images/f_detailed_10px.png</path>
