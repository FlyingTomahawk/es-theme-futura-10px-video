		<text name="md_lbl_genre">
			<pos>0.81 0.32</pos>
		</text>
		<text name="md_genre">
			<pos>0.82 0.34</pos>
		</text>
		<text name="md_lbl_developer">
			<pos>0.81 0.38</pos>
		</text>
		<text name="md_developer">
			<pos>0.82 0.40</pos>
		</text>
		<text name="md_lbl_publisher">
			<pos>0.81 0.44</pos>
		</text>
		<text name="md_publisher">
			<pos>0.82 0.46</pos>
		</text>
		<text name="md_lbl_releasedate">
			<pos>0.81 0.50</pos>
		</text>
		<datetime name="md_releasedate">
			<pos>0.82 0.52</pos>
		</datetime>	
	<!-- Metadata positions END //-->	
	
<!-- DEACTIVATED //-->		
		<text name="md_playcount, md_lbl_lastplayed, md_lbl_playcount, md_lbl_rating">
			<pos>1 1</pos>
			<size>0.1 0.1</size>
		</text>				
<!-- DEACTIVATED //-->
		<rating name="md_rating">
			<pos>1 1</pos>
			<size>0.1 0.1</size>
			<filledPath>./_art/images/star_full.png</filledPath>
			<unfilledPath>./_art/images/star_hollow.png</unfilledPath>
		</rating>		
