		<datetime name="md_lastplayed">
			<pos>1 1</pos>
			<size>0.1 0.1</size>
		</datetime>		
	
</view>
<!-- EOF DETAILED & VIDEO VIEW //-->

<!-- BOF DETAILED VIEW //-->	
	<view name="detailed">	
	
		<image name="md_image">
			<origin>0.5 0.5</origin>
			<pos>0.675 0.42</pos>
			<maxSize>0.20 0.35</maxSize>
		</image>		
		
	</view>
<!-- EOF DETAILED VIEW //-->

<!-- BOF VIDEO VIEW //-->	
    <view name="video">
	
		<video name="md_video">
		    <origin>0.5 0.5</origin>
			<pos>0.675 0.42</pos>
			<maxSize>0.25 0.32</maxSize>
		    <delay>1.0</delay>
            <showSnapshotNoVideo>true</showSnapshotNoVideo>
            <showSnapshotDelay>true</showSnapshotDelay>
		</video>
		<image name="md_marquee">
			<origin>0.5 0.5</origin>		
			<pos>0.675 0.23</pos>
			<maxSize>0.15 0.35</maxSize>
		</image>
	<!-- regular background //-->	
		<image name="background">
            <path>./_art/images/futura_bg.png</path>
            <pos>0 0</pos>
            <size>1 0</size>
			<color>b1b1ff</color>
        </image>					
		
	</view>
<!-- EOF VIDEO VIEW //-->

</theme>