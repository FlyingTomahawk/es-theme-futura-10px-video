<theme>

    <formatVersion>3</formatVersion>
    <include>./../futura.xml</include>

    <view name="system, basic, detailed, video">
        <image name="logo">
            <path>./system.svg</path>
        </image>
    </view>
<!-- SYSTEM VIEW START //-->	
	<view name="system">
		<text name="system_description" extra="true">
			<text>The Neo Geo Pocket is a monochrome handheld game console released by SNK. It was the company's first handheld system and is part of the Neo Geo family.</text>
		</text>	
<!-- screenshot left //-->		
		<image name="screenshot_left" extra="true">
			<path>./screenshot_left.png</path>			
		</image>
<!-- screenshot center //-->
		<image name="screenshot_center" extra="true">
			<path>./screenshot_center.png</path>
		</image>	
<!-- screenshot right //-->			
		<image name="screenshot_right" extra="true">
			<path>./screenshot_right.png</path>
		</image>
	</view>
<!-- BASIC VIEW START //-->	
	<view name="basic">
		<text name="system_name" extra="true">
			<text>Neo Geo Pocket</text>
			<pos>0.020 0.07</pos>	
			<size>0.25 0</size>			
			<alignment>center</alignment>	
			<lineSpacing>1</lineSpacing>			
		</text>		
		<text name="system_year" extra="true">
			<text>1998 - 1999</text>
		</text>	
	</view>
<!-- DETAILED VIEW START //-->	
	<view name="detailed, video">
		<text name="system_name_year" extra="true">
			<text>NGP 1998 - 1999</text>			
		</text>				
	</view>		

</theme>