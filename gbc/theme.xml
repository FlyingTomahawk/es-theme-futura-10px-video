<theme>

    <formatVersion>3</formatVersion>
    <include>./../futura.xml</include>

    <view name="system, basic, detailed, video">
        <image name="logo">
            <path>./system.svg</path>
        </image>
    </view>
	
<!-- SYSTEM VIEW START //-->	
	<view name="system">
		<text name="system_description" extra="true">
			<text>The Game Boy Color, referred to as GBC, is a handheld game console manufactured by Nintendo. As suggested by the name, features a color screen, but no backlight.</text>
		</text>	
<!-- screenshot left //-->		
		<image name="screenshot_left" extra="true">
			<path>./screenshot_left.png</path>			
		</image>
<!-- screenshot center //-->
		<image name="screenshot_center" extra="true">
			<path>./screenshot_center.png</path>
		</image>	
<!-- screenshot right //-->			
		<image name="screenshot_right" extra="true">
			<path>./screenshot_right.png</path>
		</image>
	</view>
	
<!-- BASIC VIEW START //-->	
	<view name="basic">
		<text name="system_name" extra="true">
			<text>Game Boy Color</text>
			<pos>0.022 0.07</pos>	
			<fontSize>0.05</fontSize>
			<size>0.25 0</size>			
			<alignment>center</alignment>
			<lineSpacing>1</lineSpacing>			
		</text>		
		<text name="system_year" extra="true">
			<text>1998 - 2003</text>
			<pos>0.75 0.08</pos>			
		</text>	
	</view>
	
<!-- DETAILED VIEW START //-->	
	<view name="detailed, video">
		<image name="logo">	
				<pos>0.08 0.07</pos>
			<maxSize>0.33 0.19</maxSize>
		</image>	
		<text name="system_name_year" extra="true">
			<text>GBC 1998 - 2003</text>			
		</text>				
	</view>		

</theme>