<theme>

    <formatVersion>3</formatVersion>
    <include>./../futura.xml</include>

    <view name="system, basic, detailed, video">
        <image name="logo">
            <path>./system.svg</path>
        </image>	
    </view>
	
<!-- SYSTEM VIEW START //-->
	<view name="system">
		<text name="system_description" extra="true">
			<text>The Atari 8-bit family is a series of 8-bit home computers introduced by Atari, Inc. in 1979 [2] and manufactured until 1992. All of the machines in the family are technically similar, and differ primarily in packaging.</text>
		</text>
<!-- screenshot left //-->		
		<image name="screenshot_left" extra="true">
			<path>./screenshot_left.png</path>			
		</image>
<!-- screenshot center //-->
		<image name="screenshot_center" extra="true">
			<path>./screenshot_center.png</path>
		</image>	
<!-- screenshot right //-->			
		<image name="screenshot_right" extra="true">
			<path>./screenshot_right.png</path>
		</image>	
	</view>
	
<!-- BASIC VIEW START //-->	
	<view name="basic">
		<text name="system_name" extra="true">
			<text>Atari800</text>			
		</text>	
		<text name="system_year" extra="true">
			<text>1979 - 1992</text>
		</text>		
	</view>
	
<!-- DETAILED VIEW START //-->	
	<view name="detailed, video">
		<image name="logo">
			<pos>0.11 0.070</pos>
		</image>		
		<text name="system_name_year" extra="true">
			<text>Atari800 1979 - 1992</text>	
			<pos>0.56 0.045</pos>			
		</text>				
	</view>		
	
</theme>