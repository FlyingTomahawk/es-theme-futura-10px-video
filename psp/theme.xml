<theme>

    <formatVersion>3</formatVersion>
    <include>./../futura.xml</include>

    <view name="system, basic, detailed, video">
        <image name="logo">
            <path>./system.svg</path>
        </image>
    </view>
	
<!-- SYSTEM VIEW START //-->	
	<view name="system">
		<text name="system_description" extra="true">
			<text>The PlayStation Portable (PSP) is a handheld game console developed by Sony. The PlayStation Portable became the most powerful portable system when launched, just after the Nintendo DS in 2004. It was the first real competitor to Nintendo's handheld domination.</text>
		</text>	
<!-- screenshot left //-->		
		<image name="screenshot_left" extra="true">
			<path>./screenshot_left.png</path>			
		</image>
<!-- screenshot center //-->
		<image name="screenshot_center" extra="true">
			<path>./screenshot_center.png</path>
		</image>	
<!-- screenshot right //-->			
		<image name="screenshot_right" extra="true">
			<path>./screenshot_right.png</path>
		</image>
	</view>
	
<!-- BASIC VIEW START //-->	
	<view name="basic">
		<image name="logo">
			<maxSize>0.22 0.14</maxSize>
		</image>		
		<text name="system_name" extra="true">
			<text>PlayStation Portable</text>
			<pos>0.025 0.07</pos>	
			<size>0.25 0</size>			
			<alignment>center</alignment>	
			<lineSpacing>1</lineSpacing>		
		</text>		
		<text name="system_year" extra="true">
			<text>2004 - 2014</text>
			<pos>0.75 0.08</pos>			
		</text>	
	</view>
	
<!-- DETAILED VIEW START //-->	
	<view name="detailed, video">
		<image name="logo">
			<pos>0.135 0.045</pos>
			<maxSize>0.22 0.19</maxSize>
		</image>		
		<text name="system_name_year" extra="true">
			<text>PSP 2004 - 2014</text>			
		</text>				
	</view>		

</theme>