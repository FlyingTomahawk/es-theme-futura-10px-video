<theme>

    <formatVersion>3</formatVersion>
    <include>./../futura.xml</include>

    <view name="system, basic, detailed, video">
        <image name="logo">
            <path>./system.svg</path>
        </image>
    </view>
<!-- SYSTEM VIEW START //-->	
	<view name="system">
		<text name="system_description" extra="true">
			<text>The Neo Geo Pocket Color (aka. NGPC), is a 16-bit color handheld video game console manufactured by SNK. It is a successor to SNK's monochrome Neo Geo Pocket handheld which debuted in 1998 in Japan, with the Color being fully backward compatible.</text>
		</text>	
<!-- screenshot left //-->		
		<image name="screenshot_left" extra="true">
			<path>./screenshot_left.png</path>			
		</image>
<!-- screenshot center //-->
		<image name="screenshot_center" extra="true">
			<path>./screenshot_center.png</path>
		</image>	
<!-- screenshot right //-->			
		<image name="screenshot_right" extra="true">
			<path>./screenshot_right.png</path>
		</image>
	</view>
<!-- BASIC VIEW START //-->	
	<view name="basic">
		<text name="system_name" extra="true">
			<text>Neo Geo Pocket Color</text>
			<pos>0.020 0.06</pos>	
			<size>0.25 0</size>			
			<alignment>center</alignment>	
			<lineSpacing>1</lineSpacing>			
		</text>		
		<text name="system_year" extra="true">
			<text>1999 - 2001</text>
		</text>	
	</view>
<!-- DETAILED VIEW START //-->	
	<view name="detailed, video">
		<image name="logo">
			<origin>0 0</origin>
			<pos>0.13 0.04</pos>
			<maxSize>0.26 0.13</maxSize>
		</image>	
		<text name="system_name_year" extra="true">
			<text>NGPC 1999 - 2001</text>	
			<pos>0.60 0.045</pos>			
		</text>				
	</view>		

</theme>