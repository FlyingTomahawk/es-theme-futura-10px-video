<theme>

    <formatVersion>3</formatVersion>
    <include>./../futura.xml</include>

    <view name="system, basic, detailed, video">
        <image name="logo">
            <path>./system.svg</path>
        </image>
    </view>
	
<!-- SYSTEM VIEW START //-->	
	<view name="system">
		<text name="system_description" extra="true">
			<text>The Virtual Boy is a 32-bit table-top video game console developed and manufactured by Nintendo. Released in 1995, it was marketed as the first console capable of displaying stereoscopic 3D graphics, a form of virtual reality.</text>
		</text>	
<!-- screenshot left //-->		
		<image name="screenshot_left" extra="true">
			<path>./screenshot_left.png</path>			
		</image>
<!-- screenshot center //-->
		<image name="screenshot_center" extra="true">
			<path>./screenshot_center.png</path>
		</image>	
<!-- screenshot right //-->			
		<image name="screenshot_right" extra="true">
			<path>./screenshot_right.png</path>
		</image>
	</view>
	
<!-- BASIC VIEW START //-->	
	<view name="basic">
		<image name="logo">	
			<pos>0.5 0.1</pos>
			<maxSize>0.20 0.16</maxSize>	
		</image>
		<text name="system_name" extra="true">
			<text>Virtual Boy</text>
			<pos>0.025 0.08</pos>			
		</text>		
		<text name="system_year" extra="true">
			<text>1995 - 1996</text>
		</text>	
	</view>
	
<!-- DETAILED VIEW START //-->	
	<view name="detailed, video">
		<image name="logo">
			<pos>0.14 0.05</pos>
			<maxSize>0.22 0.19</maxSize>
		</image>		
		<text name="system_name_year" extra="true">
			<text>Virtual Boy 1995 - 1996</text>
			<pos>0.575 0.05</pos>			
			<fontSize>0.04</fontSize>			
		</text>				
	</view>		

</theme>